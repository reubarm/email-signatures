{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-standard",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-import-group-ordering",
    "tslint-sonarts"
  ],
  "linterOptions": {
    "exclude": ["types/**.d.ts", "src/**/*/*.test.ts", "src/**/*/*.test.tsx"]
  },
  "jsRules": {},
  "rules": {
    "ordered-imports": false,
    "cognitive-complexity": false,
    "object-literal-sort-keys": false,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "protected-static-field",
          "private-static-field",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "public-constructor",
          "protected-constructor",
          "private-constructor",
          "public-static-method",
          "public-instance-method",
          "protected-static-method",
          "protected-instance-method",
          "private-static-method",
          "private-instance-method"
        ]
      }
    ],
    "jsx-no-lambda": false,
    "jsx-boolean-value": false,
    "no-console": false,
    "member-access": [true, "no-public"],
    "no-explicit-index-import": true,
    "import-group-ordering": {
      "options": {
        "imports-groups": [
          {
            "name": "dependencies"
          },
          {
            "name": "farAway"
          },
          {
            "name": "above"
          },
          {
            "name": "under"
          },
          {
            "name": "injectors"
          }
        ],
        "matching-rules": [
          {
            "type": "project",
            "matches": "^loki/configure.*$",
            "imports-group": "injectors"
          },
          {
            "type": "dependencies",
            "imports-group": "dependencies",
            "from-package.json": true
          },
          {
            "type": "project",
            "matches": "^(\\.\\.\\/\\.\\.)((.*)|$)",
            "imports-group": "farAway"
          },
          {
            "type": "project",
            "matches": "^(\\.\\.)((\\/[^.]{2}.*)|$)",
            "imports-group": "above"
          },
          {
            "type": "project",
            "matches": "^(\\.)((\\/[^.]{2}.*)|$)",
            "imports-group": "under"
          }
        ]
      }
    }
  }
}
