{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Android",
      "program": "${workspaceRoot}/.vscode/launchReactNative.js",
      "type": "reactnative",
      "request": "launch",
      "runtimeVersion": "10.15.1",
      "platform": "android",
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.vscode/.react"
    },
    {
      "name": "Debug iOS",
      "program": "${workspaceRoot}/.vscode/launchReactNative.js",
      "type": "reactnative",
      "request": "launch",
      "runtimeVersion": "10.15.1",
      "platform": "ios",
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.vscode/.react"
    },
    {
      "name": "Attach to packager",
      "program": "${workspaceRoot}/.vscode/launchReactNative.js",
      "type": "reactnative",
      "request": "attach",
      "runtimeVersion": "10.15.1",
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.vscode/.react"
    },
    {
      "name": "Run TSLint Tests",
      "program": "${workspaceFolder}/node_modules/tslint/bin/tslint",
      "args": ["--test", "-r", "build/rules/src", "rules/tests/**"],
      "type": "node",
      "request": "launch",
      "runtimeVersion": "10.15.1",
      "outputCapture": "std",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/build/rules/**/*.js"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--nolazy"]
    }
  ]
}
