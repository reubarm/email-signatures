{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-native",
    "declaration": true,
    "sourceMap": true,
    "outDir": "../../../../../build",
    "rootDirs": [
      "../../../../../src",
      "../../../../../storybook",
      "../../../../../__tests__",
      "../../../../../rules"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "baseUrl": "../../../../../",
    "paths": {
      "*": ["../../../../../types/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "resize-mode",
            "tint-color",
            "elevation",
            "margin-vertical",
            "margin-horizontal",
            "padding-vertical",
            "padding-horizontal"
          ]
        }
      }
    ]
  },
  "exclude": [
    "../../../../../package.json",
    "../../../../../node_modules",
    "../../../../../ruby_gems",
    "../../../../../build",
    "../../../../../e2e",
    "../../../../../types",
    "../../../../../android",
    "../../../../../ios"
  ]
}
